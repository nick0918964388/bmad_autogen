# 應用程式基本設定
APP_NAME="智能助理應用程式 API"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true

# 伺服器設定
HOST="0.0.0.0"
PORT=8000

# 資料庫設定
DATABASE_URL="postgresql://user:password@localhost:5432/smart_assistant"

# JWT 認證設定
SECRET_KEY="your-secret-key-here"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Ollama 設定
OLLAMA_API_BASE_URL="http://ollama.webtw.xyz:11434"
OLLAMA_EMBEDDING_MODEL="all-minilm:l6-v2"
OLLAMA_TIMEOUT=30
OLLAMA_MAX_RETRIES=3

# 向量資料庫設定
VECTOR_DB_TYPE="faiss"
VECTOR_DB_PATH="/app/data/vector_db"
VECTOR_DIMENSION=384
VECTOR_METRIC="cosine"

# Embedding 處理設定
EMBEDDING_BATCH_SIZE=10
EMBEDDING_CONCURRENT_LIMIT=5

# 文件處理設定
MAX_FILE_SIZE=10485760  # 10MB in bytes
CHUNK_SIZE=1000
CHUNK_OVERLAP=100

# CORS 設定
ALLOWED_ORIGINS="http://localhost:3000,http://frontend:3000,http://localhost:5173"

# Google OAuth 設定 (可選)
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"